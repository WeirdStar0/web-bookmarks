{
    "manifest_version": 3,
    "name": "Web Bookmarks Extension",
    "version": "1.0",
    "description": "Quickly save bookmarks to your Web Bookmarks app.",
    "permissions": [
        "activeTab",
        "storage",
        "scripting"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "host_permissions": [
        "<all_urls>"
    ]
}